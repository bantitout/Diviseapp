

<h1>Posts</h1>

<% if user_signed_in? %>
  
  <%= link_to 'New Post',"#" ,{'data-toggle' =>  "modal", 'data-target' => '#modal-window',class: "btn btn-primary"}  %><br>

<% end %> <br>

<table class = "table-bordered w-100 text-center font-weight-bold thead-dark" >
  <thead class="thead-dark">
    <tr>
      <th>Titel</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titel %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post ,class: "btn btn-info text-white" %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', "#" ,{'data-toggle' =>  "modal", 'data-target' => "#post_#{post.id}",class: "btn btn-danger text-white"}    %></td>
        
          <div class="modal fade" id= "post_<%=post.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <%= render 'edit',post: post%>
                  </div>
                </div>
              </div>
</div>



        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-primary text-white" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render partial: 'shared/pagination', locals: { pagy: @pagy }%>

<br>

<div class="modal fade" id="modal-window" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form',post: @post%>
      </div>
    </div>
  </div>
</div>

